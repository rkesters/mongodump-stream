{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "outDir": "./dist",
        "rootDir": ".",
        "inlineSourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": ["./dist"]
}
